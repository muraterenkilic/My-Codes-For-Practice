class Solution {
    public String longestPalindrome(String s) {
        if (s == null || s.length() == 0) return "";

        int bestLeft = 0;
        int bestRight = 0;

        for (int i = 0; i < s.length(); i++) {
            // odd center
            int left = i, right = i;
            while (left >= 0 && right < s.length() && s.charAt(left) == s.charAt(right)) {
                left--;
                right++;
            }
            // after loop, valid is [left+1, right-1]
            int L = left + 1, R = right - 1;
            if (R - L > bestRight - bestLeft) {
                bestLeft = L;
                bestRight = R;
            }

            // even center
            left = i; right = i + 1;
            while (left >= 0 && right < s.length() && s.charAt(left) == s.charAt(right)) {
                left--;
                right++;
            }
            L = left + 1; R = right - 1;
            if (R - L > bestRight - bestLeft) {
                bestLeft = L;
                bestRight = R;
            }
        }

        return s.substring(bestLeft, bestRight + 1);
    }
}
