class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0) return false;
        if (x != 0 && x % 10 == 0) return false;

        int digits = 0;
        int y = x;
        if (y == 0) {
            digits = 1;
        } else {
            while (y != 0) {
                y /= 10;
                digits++;
            }
        }

        y = x;
        int halfReversed = 0;
        int halfLen = digits / 2;

        for (int i = 0; i < halfLen; i++) {
            halfReversed = halfReversed * 10 + (y % 10);
            y /= 10;
        }

        if (digits % 2 == 1) {
            y /= 10;
        }

        return y == halfReversed;
    }
}
